// Place your settings in this file to overwrite the default settings
{
  "editor.disableTranslate3d": true,
  "editor.rulers": [
    80,
    100
  ],
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "files.exclude": {
    "**/*~": true,
    "bazel-*/": true,
    "build/builder_home/**": true
  },
  "workbench.editor.enablePreview": false,
  "cSpell.userWords": [
    "backupccl",
    "bazel",
    "builtins",
    "bytea",
    "callsite",
    "callsites",
    "cdcevent",
    "Changefeed",
    "cockroachdb",
