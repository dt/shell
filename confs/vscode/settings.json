// Place your settings in this file to overwrite the default settings
{
    "editor.rulers": [80, 100],
    "files.trimTrailingWhitespace": true,
    "go.formatFlags": ["-tab", "2"],
    "go.formatTool": "/Users/david/go/src/github.com/cockroachdb/cockroach/bin/crlfmt",
    "go.gocodeAutoBuild": false,
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "files.exclude": {
        "**/*~": true,
        "vendor/**": true,
        "build/builder_home/**": true
    },
    "workbench.editor.enablePreview": false,
    "window.zoomLevel": 0,
    "cSpell.userWords": [
      "Errorf",
      "Sprintf",
      "Stmts",
      "callsite",
      "callsites",
      "cockroachdb",
      "crdb",
      "loggable",
      "pgerror",
      "roachpb",
      "serverpb",
      "struct",
      "unencrypted",
      "MVCC",
      "sst",
      "ssts",
      "Eventf",
      "deps",
      "Warningf",
      "Infof",
      "LDFLAGS",
      "rocksdb",
      "leveldb",
    ],
    "[cpp]": {
      "editor.quickSuggestions": false
    },
    "[c]": {
      "editor.quickSuggestions": false
    },
    "git.autorefresh": false,
    "workbench.activityBar.visible": true,
}
